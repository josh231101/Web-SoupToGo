<div id="carouselexample" class="carousel slide carousel-multi-item" data-ride="carousel">
  <div class="carousel-inner">
    <!--First slide-->
    <div class="carousel-item active">
      <%soups.forEach(function(element){%>

        <div class="col-md-3" style="float:left">
          <div class="card mb-2">
            <img class="card-img-top"
            src="<%= element.imgUrl%>" alt="Card image cap">
            <div class="card-body no-padding">
              <h4 class="card-title"><%= element.title %></h4>
              <i style="display:inline;float:left;text-align:left;margin-top:0.25rem;" class="icon-star fas fa-star"></i>
              <p style="display:inline;float:left;text-align:left;"><%=element.stars%> </p>
              <p style="float : right;text-align:right;">$ <%=element.price %></p>
            </div>
          </div>
        </div>
      <%})%>

    </div>
    <!--/.First slide-->

    <!--Second slide-->
    <div class="carousel-item">
      <%soups.forEach(function(element){%>

        <div class="col-md-3" style="float:left">
          <div class="card mb-2">
            <img class="card-img-top"
            src="<%= element.imgUrl%>" alt="Card image cap">
            <div class="card-body">
              <h4 class="card-title"><%= element.title %></h4>
              <i style="display:inline;float:left;text-align:left;margin-top:0.25rem;" class="icon-star fas fa-star"></i>
              <p style="display:inline;float:left;text-align:left;"><%=element.stars%> </p>
              <p style="float : right;text-align:right;">$ <%=element.price %></p>
            </div>
          </div>
        </div>
      <%})%>



    </div>
    <!--/.Second slide-->


  </div>
  <a class="carousel-control-prev" href="#carouselexample" role="button" data-slide="prev">
    <span style="-webkit-transform: scaleX(-1);transform: scaleX(-1);" class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselexample" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
